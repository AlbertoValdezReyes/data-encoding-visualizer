<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.uaemex.td.dataencodingvisualizer.controller.MainController"
      spacing="15" style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Título -->
    <Label text="Data Encoding Visualizer - UAEMEX"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Separator/>

    <!-- Panel de Control - LADO A LADO -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <!-- Categoría -->
        <VBox spacing="5">
            <Label text="Categoría:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="categoryComboBox" prefWidth="280" promptText="Seleccione categoría"/>
        </VBox>

        <!-- Técnica -->
        <VBox spacing="5">
            <Label text="Técnica de Codificación:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="techniqueComboBox" prefWidth="320" promptText="Seleccione técnica"/>
        </VBox>
    </HBox>

    <!-- Input y Botón -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Datos de Entrada:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="inputTextField"
                       promptText="Ej: 10110010"
                       prefWidth="400"
                       style="-fx-font-size: 14px; -fx-padding: 8px;"/>
        </VBox>

        <VBox spacing="5" alignment="BOTTOM_LEFT">
            <Label text=" " style="-fx-font-size: 1px;"/> <!-- Spacer invisible -->
            <Button fx:id="generateButton"
                    text="Generar Señal"
                    prefWidth="150"
                    prefHeight="35"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                    onMouseEntered="#onMouseEntered"
                    onMouseExited="#onMouseExited"/>
        </VBox>
    </HBox>

    <!-- Panel de Armónicos (solo visible para categorías analógicas) -->
    <VBox fx:id="harmonicsPanel" spacing="0" visible="false" managed="false"
          style="-fx-background-color: #e8f4fc; -fx-background-radius: 8; -fx-border-color: #3498db; -fx-border-radius: 8;">

        <!-- Header clickeable para toggle -->
        <HBox spacing="10" alignment="CENTER_LEFT" onMouseClicked="#toggleHarmonicsContent"
              style="-fx-padding: 10 15 10 15; -fx-cursor: hand;">
            <Label fx:id="harmonicsToggleIcon" text="▼" style="-fx-font-size: 12px; -fx-text-fill: #3498db;"/>
            <Label text="Constructor de Armónicos" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c3e50;"/>
        </HBox>

        <!-- Contenido colapsable -->
        <VBox fx:id="harmonicsContent" spacing="10" style="-fx-padding: 0 15 15 15;">
            <!-- Botones de armónicos -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Armónicos:" style="-fx-font-weight: bold;"/>
                <Button text="sin(t)" onAction="#addSin" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="cos(t)" onAction="#addCos" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="sin(2t)" onAction="#addSin2" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="cos(2t)" onAction="#addCos2" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="sin(3t)" onAction="#addSin3" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="cos(3t)" onAction="#addCos3" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
            </HBox>

            <!-- Operadores y coeficientes -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Operadores:" style="-fx-font-weight: bold;"/>
                <Button text="+" onAction="#addPlus" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="-" onAction="#addMinus" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="*" onAction="#addMultiply" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="/" onAction="#addDivide" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="(" onAction="#addOpenParen" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
                <Button text=")" onAction="#addCloseParen" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
                <Button text="pi" onAction="#addPi" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
                <Button text="Limpiar" onAction="#clearFunction" style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- Gráfico -->
    <VBox VBox.vgrow="ALWAYS" spacing="5">
        <Label text="Señal Generada:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <LineChart fx:id="signalChart"
                   prefHeight="350"
                   legendVisible="true"
                   style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1;">
            <xAxis>
                <NumberAxis label="Tiempo (segundos)" side="BOTTOM" autoRanging="true"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Amplitud (V)" side="LEFT" autoRanging="true"/>
            </yAxis>
        </LineChart>
    </VBox>

    <!-- Descripción -->
    <VBox spacing="5">
        <Label text="Descripción de la Técnica:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="descriptionTextArea"
                  prefHeight="90"
                  wrapText="true"
                  editable="false"
                  style="-fx-font-size: 13px; -fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
    </VBox>

    <!-- Footer -->
    <Separator/>
    <HBox alignment="CENTER" spacing="20">
        <Label text="Universidad Autónoma del Estado de México"
               style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
        <Label text="•" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
        <Label text="Transmisión de Datos - 2025"
               style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
    </HBox>

</VBox>